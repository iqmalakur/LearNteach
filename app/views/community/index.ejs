<div class="row">
  <% communities.forEach(community => { %>
  <div class="col-4 my-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3"><%- community.name %></h5>
        <div>Instructor : <%- community.instructor %></div>
        <div>Members : <%- community.members %></div>
        <a href="/community/<%- community.id %>" class="btn btn-primary mt-3">
          Open Chat
        </a>
      </div>
    </div>
  </div>
  <% }) %>
</div>
