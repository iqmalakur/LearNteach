<div id="course">
  <div class="d-flex justify-content-between bg-light rounded user-menu">
    <a href="/my" class="menu py-3 text-center">Dashboard </a>
    <a href="/my/course" class="menu py-3 active text-center">Courses </a>
    <a href="/wishlist" class="menu py-3 text-center">Wishlist </a>
  </div>
  <% if (courses.length === 0) { %>
  <h3 class="text-center text-secondary mt-5">No courses are enrolled</h3>
  <% } courses.forEach(course => { %>
  <a href="/learn/<%- course.id %>" class="text-decoration-none text-dark">
    <div class="row shadow">
      <div
        class="col-4 course-preview"
        style="background-image: url(/img/courses/<%- course.preview %>)"
      ></div>
      <div class="col-8 p-3">
        <h4><%- course.title %></h4>
        <h6 class="text-secondary fw-normal"><%- course.User.name %></h6>
        <p><%- course.description %></p>
        <div
          class="progress"
          role="progressbar"
          aria-label="Example with label"
          aria-valuenow="25"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          <div class="progress-bar" style="width: 25%">25%</div>
        </div>
      </div>
    </div>
  </a>
  <% }) %>
</div>
