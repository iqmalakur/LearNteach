<div class="signUp text-center">
  <div class="greeting">
    <h1>Sign up Instructor</h1>
  </div>

  <form action="/instructor/register" method="POST" id="instructor-register">
    <div class="boxSignup">
      <div class="form-error"></div>
      <div class="form-floating mb-2">
        <input
          type="file"
          class="form-control"
          id="document"
          placeholder="Registration Document"
          name="document"
          accept="application/pdf"
        />
        <label for="document">Registration Document</label>
      </div>

      <button class="submit btn btn-secondary mt-3" style="width: 100%">
        Sign up
      </button>
    </div>
  </form>
</div>
