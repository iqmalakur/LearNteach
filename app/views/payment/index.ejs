      <h2 class="mt-5 mb-3">Courses</h2>
      <div class="course-list ps-4">
        <% if (courses.length === 0) { %>
        <h3 class="text-secondary text-center">Cart is Empty</h3>
        <% } %> <% courses.forEach(course => { %>
        <div class="row my-3">
          <div class="col-10 shadow-sm bg-light rounded row p-0">
            <div
              class="col-3 course-preview"
              style="background-image: url(/img/courses/<%- course.preview %>)"
            ></div>
            <div class="col-7 p-3">
              <h5><%- course.title %></h5>
            </div>
            <div class="col-2 p-3">
              <h6 class="text-end text-secondary">
                <%- priceFormat(course.price) %>
              </h6>
