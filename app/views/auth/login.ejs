<div class="signUp text-center">
  <div class="greeting">
    <h1>Sign in</h1>
    <h6>Log in and start honing your skills here</h6>
  </div>

  <form action="/login" method="POST" class="form-post">
    <div class="boxSignin">
      <div class="form-floating mb-2">
        <input
          type="username"
          class="form-control"
          id="floatingInput"
          placeholder="username"
        />
        <label for="floatingInput">Username or e-mail</label>
      </div>

      <div class="form-floating mt-2">
        <input
          type="password"
          class="form-control"
          id="floatingPassword"
          placeholder="Password"
        />
        <label for="floatingPassword">Password</label>
      </div>

      <div class="tncCheck">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" />
        <label class="form-check-label" for="exampleCheck1">Remember me </label>
      </div>
    </div>
    <button class="button">Sign up</button>
  </form>

  <div class="forgetPw">
    <p><a class="link-opacity-50-hover" href="#">Forget your password?</a></p>
  </div>
  <hr class="line" />
  <div class="SignIn">
    <p>
      Not have an account?
      <a class="link-opacity-50-hover" href="#">Sign up</a>
    </p>
  </div>
</div>
