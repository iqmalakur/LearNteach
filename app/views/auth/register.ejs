<div class="signUp">
  <div class="greeting">
    <h1>Sign up</h1>
    <h6>Sign up and start honing your skills here</h6>
  </div>

  <form action="/register" method="POST" class="form-post">
    <div class="boxSignup">
      <div class="form-floating mb-2">
        <input
          type="name"
          class="form-control"
          id="floatingInput"
          placeholder="name"
        />
        <label for="floatingInput">Full Name</label>
      </div>

      <div class="form-floating mb-2">
        <input
          type="email"
          class="form-control"
          id="floatingInput"
          placeholder="name@example.com"
        />
        <label for="floatingInput">Email address</label>
      </div>

      <div class="form-floating mt-2">
        <input
          type="password"
          class="form-control"
          id="floatingPassword"
          placeholder="Password"
        />
        <label for="floatingPassword">Password</label>
      </div>

      <div class="form-floating mt-2">
        <input
          type="password"
          class="form-control"
          id="floatingPassword"
          placeholder="Password"
        />
        <label for="floatingPassword">Confirm Password</label>
      </div>

      <div class="tncCheck">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" />
        <label class="form-check-label" for="exampleCheck1"
          >Agree with our
        </label>
        <a class="icon-link" href="#">
          terms and cons.
          <svg class="bi" aria-hidden="true">
            <use xlink:href="#arrow-right"></use>
          </svg>
        </a>
      </div>
    </div>
    <button class="submit">Sign up</button>
  </form>

  <br />
  <br />
  <hr class="line" />
  <div class="SignIn">
    <p>
      Already have an account?
      <a class="link-opacity-50-hover" href="#">Sign in</a>
    </p>
  </div>
</div>
